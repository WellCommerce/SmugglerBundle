<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="knp.packagist_api.client" class="Packagist\Api\Client"/>

        <service id="package.manager.admin" class="WellCommerce\Bundle\AppBundle\Manager\Admin\PackageManager">
            <argument type="service" id="package.repository"/>
            <argument type="service" id="package.event_dispatcher"/>
            <argument type="service" id="package.factory"/>
            <argument type="service" id="package.form_builder"/>
            <argument type="service" id="package.datagrid"/>
            <call method="setHelper">
                <argument type="service" id="package.helper"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="package.factory" class="WellCommerce\Bundle\AppBundle\Factory\PackageFactory"/>

        <service id="package.event_dispatcher" parent="core.event_dispatcher" public="false">
            <argument type="service" id="event_dispatcher"/>
        </service>

        <service id="package.controller.admin" class="WellCommerce\Bundle\AppBundle\Controller\Admin\PackageController">
            <argument type="service" id="package.manager.admin"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="package.repository" class="WellCommerce\Bundle\AppBundle\Repository\PackageRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>WellCommerceAppBundle:Package</argument>
        </service>

        <service id="package.dataset.query_builder" class="WellCommerce\Bundle\AppBundle\DataSet\Admin\PackageDataSetQueryBuilder" public="false">
            <argument type="service" id="package.repository"/>
        </service>

        <service id="package.dataset" class="WellCommerce\Bundle\AppBundle\DataSet\Admin\PackageDataSet">
            <argument type="service" id="package.dataset.query_builder"/>
            <argument type="service" id="dataset.manager"/>
            <argument type="service" id="package.event_dispatcher"/>
            <configurator service="dataset.configurator" method="configure"/>
        </service>

        <service id="package.datagrid" class="WellCommerce\Bundle\AppBundle\DataGrid\PackageDataGrid">
            <argument key="identifier">package</argument>
            <argument type="service" id="package.dataset"/>
            <argument type="service" id="package.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="package.form_builder" class="WellCommerce\Bundle\AppBundle\Form\Admin\PackageFormBuilder">
            <argument type="service" id="form.resolver.factory"/>
            <argument type="service" id="form.handler"/>
            <argument type="service" id="package.event_dispatcher"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="package.command.plugin.require" class="WellCommerce\Bundle\CoreBundle\Command\Package\RequireCommand">
            <tag name="console.command" />
        </service>

        <service id="package.command.plugin.update" class="WellCommerce\Bundle\CoreBundle\Command\Package\UpdateCommand">
            <tag name="console.command" />
        </service>

        <service id="package.command.plugin.remove" class="WellCommerce\Bundle\CoreBundle\Command\Package\RemoveCommand">
            <tag name="console.command" />
        </service>

        <service id="dataset.transformer.package_version_reference" class="WellCommerce\Bundle\CoreBundle\DataSet\Transformer\VersionReferenceTransformer">
            <tag name="dataset.transformer" alias="package_version_reference"/>
        </service>

        <service id="package.helper" class="WellCommerce\Bundle\CoreBundle\Helper\Package\PackageHelper">
            <argument type="service" id="knp.packagist_api.client"/>
        </service>
    </services>
</container>
